---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<!-- âœ… SEARCH BAR -->
		<div class="search-wrapper">
			<input
				id="search-input"
				type="search"
				placeholder="Search articles..."
				class="search-bar"
			/>
			<div id="search-results" class="search-results"></div>
		</div>

		<!-- SOCIAL ICONS -->
		<div class="social-links">
			<a href="https://m.webtoo.ls/@astro" target="_blank" aria-label="Follow Astro on Mastodon">
				<!-- mastodon icon -->
			</a>
			<a href="https://twitter.com/astrodotbuild" target="_blank" aria-label="Follow Astro on Twitter">
				<!-- twitter icon -->
			</a>
			<a href="https://github.com/withastro/astro" target="_blank" aria-label="Go to Astro's GitHub repo">
				<!-- github icon -->
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		flex-wrap: wrap;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.search-wrapper {
		position: relative;
	}
	.search-bar {
		padding: 0.5em;
		border-radius: 4px;
		border: 1px solid #ccc;
		font-size: 0.9rem;
		width: 200px;
	}
	.search-results {
		position: absolute;
		top: 110%;
		left: 0;
		width: 100%;
		background: white;
		border: 1px solid #ddd;
		border-radius: 4px;
		z-index: 999;
		display: none;
	}
	.search-results.show {
		display: block;
	}
	.search-results a {
		display: block;
		padding: 0.5em;
		text-decoration: none;
		color: black;
		border-bottom: 1px solid #eee;
	}
	.search-results a:hover {
		background-color: #f5f5f5;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.search-bar {
			width: 100%;
		}
	}
</style>

<script type="module">
	document.addEventListener("DOMContentLoaded", async () => {
		const input = document.getElementById("search-input");
		const results = document.getElementById("search-results");

		// Optionally: Use Pagefind or Fuse.js here
		input.addEventListener("input", async () => {
			const query = input.value.trim().toLowerCase();
			if (query.length < 2) {
				results.classList.remove("show");
				results.innerHTML = "";
				return;
			}

			// Dummy results for now. Replace with real search logic.
			results.classList.add("show");
			results.innerHTML = `
				<a href="/blog/example-post">Example result for: "${query}"</a>
				<a href="/blog/another">Another blog post</a>
			`;
		});
	});
</script>
